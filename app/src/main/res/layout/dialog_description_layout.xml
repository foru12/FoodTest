<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/dialog_bg">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_container"
                android:layout_width="match_parent"
                android:elevation="3dp"

                android:background="@drawable/menu_bg"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/image_bg_menu"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/asdew" />
            </RelativeLayout>


            <TextView
                android:id="@+id/txt_name_menu_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="Рыба с овощами и рисом"
                android:fontFamily="@font/sf_pro_display_light"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_price_menu_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"

                    android:textColor="@color/black"
                    android:text="799 ₽"
                    android:fontFamily="@font/sf_pro_display_light"/>


                <TextView
                    android:id="@+id/txt_weight_menu_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:text="· 560г"
                    android:fontFamily="@font/sf_pro_display_light"/>


            </LinearLayout>


            <TextView
                android:id="@+id/txt_description_menu_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="#A6000000"
                android:text="Рыба маринованная со специями, лимонным соком, соевым соусом и запечeнная в духовке с лучком, томатами и картошечкой под золотистой майонезно-сырной шубкой"
                android:fontFamily="@font/sf_pro_display_light"/>

            <Button
                android:id="@+id/btn_addBusket_menu_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bt"
                android:text="Добавить в корзину"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/sf_pro_display_light"
                android:textSize="16sp"/>


        </LinearLayout>




    </RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>